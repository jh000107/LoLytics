{
	"name": "Historical Stat Data Ingestion",
	"properties": {
		"activities": [
			{
				"name": "Get Match ID",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"url": {
						"value": "https://americas.api.riotgames.com/lol/match/v5/matches/by-puuid/@{pipeline().parameters.puuid}/ids?startTime=@{pipeline().parameters.startTime}&endTime=@{pipeline().parameters.endTime}&type=@{pipeline().parameters.matchType}&start=0&count=@{pipeline().parameters.batch_size}&api_key=@{pipeline().parameters.api_key}",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Set JsonArrayOutput",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Get Match ID",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "MatchIdJsonArrayOutput",
					"value": {
						"value": "@json(activity('Get Match ID').output.response)",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Save Match ID to Blob",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "Set JsonArrayOutput",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_id/match_id.json",
					"body": {
						"value": "@variables('MatchIdJsonArrayOutput')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			},
			{
				"name": "For Each Match ID",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Set JsonArrayOutput",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('MatchIdJsonArrayOutput')",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Append to AggregatedMatchData",
							"type": "AppendVariable",
							"dependsOn": [
								{
									"activity": "Get Match Data",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "AggregatedMatchData",
								"value": {
									"value": "@activity('Get Match Data').output",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Get Match Data",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/@{item()}?api_key=@{pipeline().parameters.api_key}",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "Save Match Data to Blob",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "For Each Match ID",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_data/match_data.json",
					"body": {
						"value": "@variables('AggregatedMatchData')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			}
		],
		"parameters": {
			"puuid": {
				"type": "string",
				"defaultValue": "oDBBv1pj4GZINaHiNDtFqKUtL9qDDbGki0CKdsYAi6PvqKHg6zi2E3bh8N162f4IEkKKHDuMXruBIg"
			},
			"startTime": {
				"type": "int",
				"defaultValue": 1662004800
			},
			"endTime": {
				"type": "int",
				"defaultValue": 1738558799
			},
			"batch_size": {
				"type": "int",
				"defaultValue": 3
			},
			"matchType": {
				"type": "string",
				"defaultValue": "ranked"
			},
			"api_key": {
				"type": "string",
				"defaultValue": "RGAPI-0c29a596-50c0-4e7d-a894-b348110f088b"
			}
		},
		"variables": {
			"MatchIdJsonArrayOutput": {
				"type": "Array"
			},
			"AggregatedMatchData": {
				"type": "Array"
			}
		},
		"annotations": []
	}
}