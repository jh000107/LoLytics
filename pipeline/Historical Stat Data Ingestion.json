{
	"name": "Historical Stat Data Ingestion",
	"properties": {
		"activities": [
			{
				"name": "Save Match ID to Blob",
				"type": "WebActivity",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "For Each Batch",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_id/match_id.json",
					"body": {
						"value": "@variables('MatchIDArray')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			},
			{
				"name": "For Each Match ID",
				"type": "ForEach",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "Save Match ID to Blob",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('MatchIdJsonArrayOutput')",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Append to AggregatedMatchData",
							"type": "AppendVariable",
							"dependsOn": [
								{
									"activity": "Get Match Data",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "AggregatedMatchData",
								"value": {
									"value": "{\n  \"metadata\": @{activity('Get Match Data').output.metadata},\n  \"info\": @{activity('Get Match Data').output.info}\n}\n",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Get Match Data",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/@{item()}?api_key=@{pipeline().parameters.api_key}",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "Save Match Data to Blob",
				"type": "WebActivity",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [
					{
						"activity": "For Each Match ID",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_data/match_data.json",
					"body": {
						"value": "@variables('AggregatedMatchData')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			},
			{
				"name": "For Each Batch",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@range(0, 5)",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Get Match ID",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/by-puuid/\n@{pipeline().parameters.puuid}/ids?\nstartTime=@{pipeline().parameters.startTime}&\nendTime=@{pipeline().parameters.endTime}&\ntype=@{pipeline().parameters.matchType}&\nstart=@{mul(item(), pipeline().parameters.batch_size)}&\ncount=@{pipeline().parameters.batch_size}&\napi_key=@{pipeline().parameters.api_key}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set newMatchIdArray",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Get Match ID",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "newMatchIdArray",
								"value": {
									"value": "@json(activity('Get Match ID').output.response)\n\n\n\n",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Merge Match ID Array",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set newMatchIdArray",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "AggregatedMatchId",
								"value": {
									"value": "@json(concat('{\"mergedMatchIDs\":', string(split(concat(join(variables('newMatchIdArray'), ';'), ';', join(variables('MatchIDArray'), ';')), ';')), '}'))\n",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"puuid": {
				"type": "string",
				"defaultValue": "oDBBv1pj4GZINaHiNDtFqKUtL9qDDbGki0CKdsYAi6PvqKHg6zi2E3bh8N162f4IEkKKHDuMXruBIg"
			},
			"startTime": {
				"type": "int",
				"defaultValue": 1662004800
			},
			"endTime": {
				"type": "int",
				"defaultValue": 1738558799
			},
			"batch_size": {
				"type": "int",
				"defaultValue": 5
			},
			"matchType": {
				"type": "string",
				"defaultValue": "ranked"
			},
			"api_key": {
				"type": "string",
				"defaultValue": "RGAPI-776b6106-471b-482c-8ed7-213589dde293"
			}
		},
		"variables": {
			"MatchIdJsonArrayOutput": {
				"type": "Array"
			},
			"AggregatedMatchData": {
				"type": "Array"
			},
			"MatchIDArray": {
				"type": "Array"
			},
			"newMatchIdArray": {
				"type": "Array"
			},
			"AggregatedMatchId": {
				"type": "Array"
			}
		},
		"annotations": []
	}
}