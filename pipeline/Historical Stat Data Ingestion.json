{
	"name": "Historical Stat Data Ingestion",
	"properties": {
		"activities": [
			{
				"name": "Save Match ID to Blob",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "For Each Batch",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_id/match_id.json",
					"body": {
						"value": "@variables('MatchIDArray')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			},
			{
				"name": "For Each Match ID",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Save Match ID to Blob",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('MatchIDArray')",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Append to AggregatedMatchData",
							"type": "AppendVariable",
							"dependsOn": [
								{
									"activity": "Get Match Data",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "AggregatedMatchData",
								"value": {
									"value": "{\n  \"metadata\": @{activity('Get Match Data').output.metadata},\n  \"info\": @{activity('Get Match Data').output.info}\n}\n",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Get Match Data",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/@{item()}?api_key=@{pipeline().parameters.api_key}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Wait",
							"type": "Wait",
							"dependsOn": [
								{
									"activity": "Append to AggregatedMatchData",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"waitTimeInSeconds": 1
							}
						}
					]
				}
			},
			{
				"name": "Save Match Data to Blob",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "For Each Match ID",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "PUT",
					"headers": {
						"x-ms-version": "2017-11-09",
						"x-ms-blob-type": "BlockBlob"
					},
					"url": "https://lolyticsstorage.blob.core.windows.net/lolytics/bronze/match_data/match_data.json",
					"body": {
						"value": "@variables('AggregatedMatchData')",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://storage.azure.com/"
					}
				}
			},
			{
				"name": "For Each Batch",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@range(0, 5)",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Get Match ID",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/by-puuid/@{pipeline().parameters.puuid}/ids?startTime=@{pipeline().parameters.startTime}&endTime=@{pipeline().parameters.endTime}&type=@{pipeline().parameters.matchType}&start=@{mul(item(), pipeline().parameters.batch_size)}&count=@{pipeline().parameters.batch_size}&api_key=@{pipeline().parameters.api_key}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set newMatchIdArray",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Get Match ID",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "newMatchIdArray",
								"value": {
									"value": "@json(activity('Get Match ID').output.response)\n\n\n\n",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Merge Match ID Array",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set newMatchIdArray",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "AggregatedMatchId",
								"value": {
									"value": "@union(variables('newMatchIdArray'), variables('MatchIDArray'))",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Update MatchIDArray",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Merge Match ID Array",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "MatchIDArray",
								"value": {
									"value": "@variables('AggregatedMatchId')",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"puuid": {
				"type": "string",
				"defaultValue": "oDBBv1pj4GZINaHiNDtFqKUtL9qDDbGki0CKdsYAi6PvqKHg6zi2E3bh8N162f4IEkKKHDuMXruBIg"
			},
			"startTime": {
				"type": "int",
				"defaultValue": 1662004800
			},
			"endTime": {
				"type": "int",
				"defaultValue": 1738558799
			},
			"batch_size": {
				"type": "int",
				"defaultValue": 100
			},
			"matchType": {
				"type": "string",
				"defaultValue": "ranked"
			},
			"api_key": {
				"type": "string",
				"defaultValue": "RGAPI-e7506af5-4c08-40f9-8447-5c1628002b8a"
			}
		},
		"variables": {
			"AggregatedMatchData": {
				"type": "Array"
			},
			"MatchIDArray": {
				"type": "Array"
			},
			"newMatchIdArray": {
				"type": "Array"
			},
			"AggregatedMatchId": {
				"type": "Array"
			}
		},
		"annotations": []
	}
}