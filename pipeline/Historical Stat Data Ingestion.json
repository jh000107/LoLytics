{
	"name": "Historical Stat Data Ingestion",
	"properties": {
		"activities": [
			{
				"name": "Lookup Last Starting Index",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "lastRun",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "Update Start Time",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Lookup Last Starting Index",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "computedStartIndex",
					"value": {
						"value": "@coalesce(activity('Lookup Last Starting Index').output.firstRow.lastRunTime, pipeline().parameters.startIndex)",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Until 100 matches",
				"type": "Until",
				"dependsOn": [
					{
						"activity": "Update Start Time",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greaterOrEquals(variables('computedStartIndex'), 100)",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Get Match IDs",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"headers": {
									"api_key": "RGAPI-8d813043-591d-4b1f-bb8e-ec5b600baf22"
								},
								"url": {
									"value": "https://americas.api.riotgames.com/lol/match/v5/matches/by-puuid/@{pipeline().parameters.puuid}/ids?startTime=@{pipeline().parameters.startTime}&endtime=@{pipeline().parameters.endTime}type=@{pipeline().parameters.matchType}&start=@{variables('computedStartIndex')}&count=@{pipeline().parameters.batch_size}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set nextStartIndex",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Get Match IDs",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "nextStartIndex",
								"value": {
									"value": "@add(variables('computedStartIndex'), pipeline().parameters.batch_size)",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Update computedStartIndex",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set nextStartIndex",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "computedStartIndex",
								"value": {
									"value": "@variables('nextStartIndex')",
									"type": "Expression"
								}
							}
						}
					],
					"timeout": "0.12:00:00"
				}
			}
		],
		"parameters": {
			"puuid": {
				"type": "string",
				"defaultValue": "oDBBv1pj4GZINaHiNDtFqKUtL9qDDbGki0CKdsYAi6PvqKHg6zi2E3bh8N162f4IEkKKHDuMXruBIg"
			},
			"batch_size": {
				"type": "int",
				"defaultValue": 100
			},
			"startTime": {
				"type": "int",
				"defaultValue": 1662004800
			},
			"endTime": {
				"type": "int",
				"defaultValue": 1738558799
			},
			"startIndex": {
				"type": "int",
				"defaultValue": 0
			},
			"matchType": {
				"type": "string",
				"defaultValue": "ranked"
			}
		},
		"variables": {
			"computedStartIndex": {
				"type": "Integer",
				"defaultValue": 0
			},
			"nextStartIndex": {
				"type": "Integer"
			}
		},
		"annotations": []
	}
}